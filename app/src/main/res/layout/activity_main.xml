<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/draw_lay"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/menu_btn"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:padding="3dp"
                    android:src="@drawable/menu" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/barlow_bold"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="19dp">

            </TextView>
            <RelativeLayout
                android:id="@+id/setting_btn"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:padding="3dp"
                    android:src="@drawable/setting" />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/native_ads4"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCBD8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/native_ads"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pro_dress"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/a1"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="Pro Dress"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp">

                        </TextView>

                    </RelativeLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">



                    <RelativeLayout
                        android:id="@+id/rare_emotes"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/a2">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="Rare Emotes"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp">

                        </TextView>
                    </RelativeLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <RelativeLayout
                        android:id="@+id/trending_btn"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/a4">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="Trending"
                            android:textColor="#fff"
                            android:textSize="20dp">

                        </TextView>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">



                    <RelativeLayout
                        android:id="@+id/refere_btn"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/a5"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="Refer"
                            android:textColor="#fff"
                            android:textSize="20dp">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <RelativeLayout
                        android:id="@+id/gun_skin"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/a3"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="Gun Skins"
                            android:textColor="#fff"
                            android:textSize="20dp">

                        </TextView>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">



                    <RelativeLayout
                        android:id="@+id/how_to_use"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/a6">

                        </ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/barlow_medium"
                            android:gravity="center"
                            android:text="How to use?"
                            android:textColor="#fff"
                            android:textSize="20dp">

                        </TextView>
                    </RelativeLayout>
                </LinearLayout>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/native_ads4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>

   <com.google.android.material.navigation.NavigationView
       android:layout_width="match_parent"
       android:layout_gravity="start"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="160dp"
               android:background="@drawable/background">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_above="@id/title_btn"
                   android:layout_centerInParent="true"
                   android:fontFamily="@font/barlow_regular"
                   android:gravity="center"
                   android:text="WELCOME TO THE"
                   android:textColor="#fff"
                   android:textSize="14dp" />

               <TextView

                   android:id="@+id/title_btn"
                   android:layout_width="200dp"
                   android:layout_height="30dp"
                   android:layout_marginTop="10dp"
                   android:layout_centerInParent="true"
                   android:fontFamily="@font/barlow_bold"
                   android:gravity="center"
                   android:background="@drawable/ff_heading"
                   android:textSize="21dp" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/home_btn"
               android:layout_width="match_parent"
               android:layout_height="50dp">
               <ImageView
                   android:padding="5dp"
                   android:src="@drawable/ic_home"
                   android:id="@+id/home"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
               <TextView
                   android:layout_toRightOf="@+id/home"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:paddingLeft="20dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/barlow_medium"
                   android:text="Home"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/rate_app"
               android:layout_width="match_parent"
               android:layout_height="60dp">
               <ImageView
                   android:padding="5dp"
                   android:src="@drawable/ic_rate"
                   android:id="@+id/rate"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
               <TextView
                   android:layout_toRightOf="@+id/rate"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:paddingLeft="20dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/barlow_medium"
                   android:text="Rate App"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/share_app"
               android:layout_width="match_parent"
               android:layout_height="60dp">
               <ImageView
                   android:padding="5dp"
                   android:src="@drawable/ic_share"
                   android:id="@+id/share"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
               <TextView
                   android:layout_toRightOf="@+id/share"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:paddingLeft="20dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/barlow_medium"
                   android:text="Share App"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/privacy_btn"
               android:layout_width="match_parent"
               android:layout_height="60dp">
               <ImageView
                   android:padding="5dp"
                   android:src="@drawable/ic_privacy"
                   android:id="@+id/privacy"
                   android:layout_marginLeft="20dp"
                   android:layout_centerVertical="true"
                   android:layout_width="40dp"
                   android:layout_height="40dp"/>
               <TextView
                   android:layout_toRightOf="@+id/privacy"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:paddingLeft="20dp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/barlow_medium"
                   android:text="Privacy policy"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>
           </RelativeLayout>


       </LinearLayout>
   </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>