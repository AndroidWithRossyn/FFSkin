<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.RefreyActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/ic_back"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </ImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/barlow_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#CDCBD8" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_temp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_toLeftOf="@+id/title"
            android:layout_centerVertical="true"
            android:src="@drawable/img_left"
            android:layout_width="90dp"
            android:layout_height="12dp"/>
        <TextView
            android:paddingBottom="4dp"
            android:id="@+id/title"
            android:textSize="16dp"
            android:textColor="#fff"
            android:fontFamily="@font/barlow_bold"
            android:text="ELITE PASS"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_toRightOf="@+id/title"
            android:layout_centerVertical="true"
            android:src="@drawable/img_right"
            android:layout_width="90dp"
            android:layout_height="12dp"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/native_ads"
        android:layout_below="@+id/title_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               app:cardCornerRadius="10dp"
               app:cardBackgroundColor="#153B87"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout

                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:background="@drawable/step_bg"
                       android:gravity="center"
                       android:layout_marginTop="20dp"
                       android:textColor="#FFFFFF"
                       android:fontFamily="@font/barlow_bold"
                       android:textSize="15dp"
                       android:text="Step 1"
                       android:layout_width="80dp"
                       android:layout_height="25dp"/>
                   <TextView
                       android:textColor="#fff"
                       android:textSize="15dp"
                       android:fontFamily="@font/barlow_regular"
                       android:layout_marginTop="10dp"
                       android:paddingRight="10dp"
                       android:paddingLeft="40dp"
                       android:text="@string/step11"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:background="@drawable/step_bg"
                       android:gravity="center"
                       android:layout_marginTop="15dp"
                       android:textColor="#FFFFFF"
                       android:fontFamily="@font/barlow_bold"
                       android:textSize="15dp"
                       android:text="Step 2"
                       android:layout_width="80dp"
                       android:layout_height="25dp"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:fontFamily="@font/barlow_regular"
                       android:paddingLeft="40dp"
                       android:paddingRight="10dp"
                       android:text="@string/step3"
                       android:textColor="#fff"
                       android:textSize="15dp" />

                   <TextView
                       android:background="@drawable/step_bg"
                       android:gravity="center"
                       android:layout_marginTop="15dp"
                       android:textColor="#FFFFFF"
                       android:fontFamily="@font/karla_bold"
                       android:textSize="15dp"
                       android:text="Step 3"
                       android:layout_width="80dp"
                       android:layout_height="25dp"/>
                   <TextView
                       android:layout_marginBottom="60dp"
                       android:textColor="#fff"
                       android:textSize="15dp"
                       android:fontFamily="@font/barlow_regular"
                       android:layout_marginTop="10dp"
                       android:paddingRight="10dp"
                       android:paddingLeft="40dp"
                       android:text="@string/step2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/native_ads"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>